{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-build-template",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-dev",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF_DEV}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "${SOURCE_IMAGE_KIND}",
              "name": "${SOURCE_IMAGE_NAME}:${SOURCE_IMAGE_TAG}"
            },
            "env": [
              {
                "name": "NPM_RUN",
                "value": "${NPM_RUN}"
              },
              {
                "name": "ENVIRONMENT_LABEL",
                "value": "dev"
              },
              {
                "name": "REACT_APP_ENVIRONMENT_LABEL",
                "value": "dev"
              },
              {
                "name": "INLINE_RUNTIME_CHUNK",
                "value": "false"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:dev"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-test",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF_TEST}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "${SOURCE_IMAGE_KIND}",
              "name": "${SOURCE_IMAGE_NAME}:${SOURCE_IMAGE_TAG}"
            },
            "env": [
              {
                "name": "NPM_RUN",
                "value": "${NPM_RUN}"
              },
              {
                "name": "ENVIRONMENT_LABEL",
                "value": "test"
              },
              {
                "name": "REACT_APP_ENVIRONMENT_LABEL",
                "value": "test"
              },
              {
                "name": "INLINE_RUNTIME_CHUNK",
                "value": "false"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:test"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-uat",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF_UAT}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "${SOURCE_IMAGE_KIND}",
              "name": "${SOURCE_IMAGE_NAME}:${SOURCE_IMAGE_TAG}"
            },
            "env": [
              {
                "name": "NPM_RUN",
                "value": "${NPM_RUN}"
              },
              {
                "name": "ENVIRONMENT_LABEL",
                "value": "uat"
              },
              {
                "name": "REACT_APP_ENVIRONMENT_LABEL",
                "value": "uat"
              },
              {
                "name": "INLINE_RUNTIME_CHUNK",
                "value": "false"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:uat"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-prod",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF_PROD}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "${SOURCE_IMAGE_KIND}",
              "name": "${SOURCE_IMAGE_NAME}:${SOURCE_IMAGE_TAG}"
            },
            "env": [
              {
                "name": "NPM_RUN",
                "value": "${NPM_RUN}"
              },
              {
                "name": "ENVIRONMENT_LABEL",
                "value": "prod"
              },
              {
                "name": "REACT_APP_ENVIRONMENT_LABEL",
                "value": "prod"
              },
              {
                "name": "INLINE_RUNTIME_CHUNK",
                "value": "false"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:prod"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the resources defined in this template.",
      "required": true,
      "value": "mals-app"
    },
    {
      "name": "PROJECT_PREFIX",
      "displayName": "Name",
      "description": "The project prefix",
      "required": true,
      "value": "30245e"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo.",
      "required": true,
      "value": "https://github.com/bcgov/nr-mals.git"
    },
    {
      "name": "GIT_REF_DEV",
      "displayName": "Git Reference (DEV)",
      "description": "The git reference or branch for the development environment.",
      "required": true,
      "value": "master"
    },
    {
      "name": "GIT_REF_TEST",
      "displayName": "Git Reference (TEST)",
      "description": "The git reference or branch for the test environment.",
      "required": true,
      "value": "test"
    },
    {
      "name": "GIT_REF_UAT",
      "displayName": "Git Reference (UAT)",
      "description": "The git reference or branch for the uat environment.",
      "required": true,
      "value": "uat"
    },
    {
      "name": "GIT_REF_PROD",
      "displayName": "Git Reference (PROD)",
      "description": "The git reference or branch for the production environment.",
      "required": true,
      "value": "prod"
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "displayName": "Source Context Directory",
      "description": "The source context directory.",
      "required": false,
      "value": "/"
    },
    {
      "name": "SOURCE_IMAGE_KIND",
      "displayName": "Source Image Kind",
      "description": "The 'kind' (type) of the  source image; typically ImageStreamTag, or DockerImage.",
      "required": true,
      "value": "ImageStreamTag"
    },
    {
      "name": "SOURCE_IMAGE_NAME",
      "displayName": "Source Image Name",
      "description": "The name of the source image.",
      "required": true,
      "value": "nodejs-12-centos"
    },
    {
      "name": "SOURCE_IMAGE_TAG",
      "displayName": "Source Image Tag",
      "description": "The tag of the source image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "Resources CPU Limit",
      "description": "The resources CPU limit (in cores) for this build.",
      "required": true,
      "value": "1"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Resources Memory Limit",
      "description": "The resources Memory limit (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "6Gi"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "Resources CPU Request",
      "description": "The resources CPU request (in cores) for this build.",
      "required": true,
      "value": "1"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Resources Memory Request",
      "description": "The resources Memory request (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "4Gi"
    },
    {
      "name": "NPM_RUN",
      "displayName": "npm run",
      "description": "Select an alternate / custom runtime mode, defined in your package.json file's scripts section",
      "value": "start:production"
    },
    {
      "name": "INLINE_RUNTIME_CHUNK",
      "displayName": "Inline Runtime Chunk",
      "description": "Set whether Reacts runtime script chunk is inline or bundled into its own file",
      "value": "false"
    }
  ]
}
